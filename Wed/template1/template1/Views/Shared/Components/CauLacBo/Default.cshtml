@model IEnumerable<Caulacbo>
<ul>
    @foreach (var item in Model)
    {
        <li><a href="javascript:void(0)" onclick="loadData('@item.CauLacBoId')">@item.TenClb</a></li>
    }
</ul>
<script src="../template1/js/jquery/jquery-2.2.4.min.js"></script>
<script type="text/javascript">
    function loadData(cauLacBoId) {
        $.ajax({
            url: '@Url.Action("GetData", "Home")',
            type: 'GET',
            data: { CauLacBoId: cauLacBoId },
            success: function (response) {
                console.log(response); // Log the response to see its structure
                if (response.length > 0) {
                    let tableHtml = `
                                        <table class="table table-bordered">
                                            <thead class="thead-dark">
                                                <tr>
                                                    <th>ID Cầu Thủ</th>
                                                    <th>Họ và Tên</th>
                                                    <th>Ngày Sinh</th>
                                                    <th>Quốc Tịch</th>
                                                    <th>Vị trí</th>
                                                    <th>Ảnh</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                    `;
                    response.forEach(match => {
                        tableHtml += `
                                            <tr>
                                                <td>${match.cauThuId}</td>
                                                <td>${match.hoVaTen}</td>
                                                <td>${match.ngaysinh}</td>
                                                <td>${match.quocTich}</td>
                                                <td>${match.viTri}</td>
                                                <td><img src="../images/${match.anh}" style="width:70px;height:70px"/></td>
                                            </tr>
                                        `;
                    });

                    tableHtml += `
                                            </tbody>
                                        </table>
                                    `;
                    $('#result').html(tableHtml);
                } else {
                    $('#result').html('Không có trận đấu nào.');
                }
            },
            error: function () {
                $('#result').html('Có lỗi xảy ra.');
            }
        });
    }
</script>

