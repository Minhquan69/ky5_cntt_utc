					<div class="add-cart" style="position: relative; left: 0;">
						<h4><a asp-action="ThemHangHoa">Thêm Hàng Mới</a></h4>
					</div>
				</div>
				
				<div class="section group">
					@RenderBody()
				</div>
				<!-- End New Product -->
				<!-- Begin Feature Products -->
				<div class="content_bottom">
					<div class="heading">
						<h3>Feature Products</h3>
					</div>
					<div class="see">
						<p><a href="#">See all Products</a></p>
					</div>
					<div class="clear"></div>
				</div>
				<div class="section group">
