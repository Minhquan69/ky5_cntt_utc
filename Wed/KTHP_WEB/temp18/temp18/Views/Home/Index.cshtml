@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
@model IEnumerable<Trongtai>
<div id="result">
	
</div>
<div class="row justify-content-center">
	<div class="col-lg-6 text-center">
		<div class="section-title">
			<h1>DANH SÁCH TRỌNG TÀI</h1>
			<p>

			</p>
		</div>
	</div>
</div>
<div class="row">

	@foreach(var item in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="single-product">
				<img class="img-fluid" src="@Url.Content("../images/" + @item.Anh)" alt="">
				<div class="product-details">
					<h6>
						Name: @item.HoVaTen
					</h6>
					<div class="price">
						<h6>Quốc tịch: @item.QueHuong</h6>
						<h6>Ngày sinh: @item.NgaySinh</h6>
						<h6>Kinh nghiệm: @item.SoNamKinhNghiem năm</h6>
					</div>
					<div class="prd-bottom">

						<a asp-action="SuaTrongTai" asp-route-TrongTaiId="@item.TrongTaiId" class="social-info">
							<span class="ti-bag"></span>
							<p class="hover-text">Sửa</p>
						</a>
						<a asp-action="ChiTiet" asp-route-TrongTaiId="@item.TrongTaiId" class="social-info">
							<span class="ti-bag"></span>
							<p class="hover-text">Chi Tiết</p>
						</a>
						<a href="" class="social-info">
							<span class="lnr lnr-sync"></span>
							<p class="hover-text">compare</p>
						</a>
						<a href="" class="social-info">
							<span class="lnr lnr-move"></span>
							<p class="hover-text">view more</p>
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>


