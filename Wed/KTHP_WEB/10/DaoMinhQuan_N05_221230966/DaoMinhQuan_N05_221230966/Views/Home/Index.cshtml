@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/DaoMinhQuan_Layout.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<dynamic>
<div class="colorlib-product">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
				<h2>Best Sellers</h2>
			</div>
		</div>
		<div class="row row-pb-md">
			@foreach (var i in Model)
			{
				<div class="col-lg-3 mb-4 text-center">
					<div class="product-entry border">
						<a href="#" class="prod-img">
							<img src="../Temp/images/item-1.jpg" class="img-fluid" alt="Free html5 bootstrap 4 template">
						</a>
						<div class="desc">
							<h2><a href="#">@i.Name</a></h2>
							<span class="price">$139.00</span>
						</div>
					</div>
				</div>
			}
		</div>
		<div class="row pt-5 mt-5  text-center justify-content-center">
			<div class="col-md-auto text-center">
				
					<ul>
						@Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
						 {
							 LiElementClasses = new List<string> { "page-item" },
							 PageClasses = new List<string> { "page-link" }
						 })
					</ul>
			
			</div>
		</div>
	</div>
</div>