@model IEnumerable<TLoaiSach>
<ul>
    @foreach(var item in Model)
    {
        <li><a href="javascript:void(0)" onclick="loadData('@item.MaLoai')">@item.TenLoai</a></li>
    }
</ul>

<script src="../template1/js/jquery/jquery-2.2.4.min.js"></script>
<script type="text/javascript">
    function loadData(MaLoai) {
        $.ajax({
            url: '@Url.Action("GetData", "Home")',
            type: 'GET',
            data: { MaLoai: MaLoai },
            success: function (response) {
                console.log(response); // Log the response to see its structure

                if (response.length > 0) {
                    let tableHtml = `
                                            <table class="table table-bordered">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>Mã sách</th>
                                                        <th>Tên sách</th>
                                                        <th>MaNXB</th>
                                                        <th>TacGia</th>
                                                        <th>Ảnh</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                        `;
                    response.forEach(match => {
                        tableHtml += `
                                                <tr>
                                                    <td>${match.maSach}</td>
                                                    <td>${match.tenSach}</td>
                                                    <td>${match.maNxb}</td>
                                                    <td>${match.tacGia}</td>
                                                        <td><img src="../Images/${match.fileAnh}" style="width:70px;height:70px"/></td>
                                                </tr>
                                            `;
                    });

                    tableHtml += `
                                                </tbody>
                                            </table>
                                        `;
                    $('#result').html(tableHtml);
                } else {
                    $('#result').html('Không có sach  nào.');
                }
            },
            error: function () {
                $('#result').html('Có lỗi xảy ra.');
            }
        });
    }
</script>

